            <div class="price" id="viewPrice"></div>
            <span class="muted" id="viewStore"></span>
          </div>
          <div id="viewNotes" style="margin:8px 0 12px"></div>
          <div class="actions">
            <a id="viewMap" class="button pill" target="_blank" rel="noopener">×¤×ª×— ××¤×”</a>
            <button id="editBtn" class="pill">×¢×¨×•×š</button>
            <button id="deleteBtn" class="pill" style="color:#fecaca">××—×§</button>
          </div>
        </div>
